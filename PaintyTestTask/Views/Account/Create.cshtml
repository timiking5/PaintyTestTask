@model Publication

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.Id != 0 ? "Update" : "Create") Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="UserId" hidden />
            <input asp-for="ImgUrl" hidden />
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        <div class="form-floating py-2 col-12">
                            <input asp-for="PostedDate" class="form-control border-0 shadow" value="@DateTime.Now.Date" disabled/>
                            <label asp-for="PostedDate" class="ms-2"></label>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="py-2 col-12">
                            <label asp-for="Description" class="ms-2 text-muted"></label>
                            <textarea asp-for="Description" class="form-control border-0 shadow"></textarea>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input type="file" name="file" class="form-control border-0 shadow" />
                            <label asp-for="ImgUrl" class="ms-2"></label>
                        </div>
                        <div class="row mt-3">
                            <div class="col-6 col-md-3">
                                <button type="submit" class="btn btn-primary form-control">Create</button>
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Account" asp-action="Index"
                                   class="btn btn-outline-primary border form-control">
                                    Back to List
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-2">
                    <img src="@Model.ImgUrl" width="100%" />
                </div>
            </div>
            
        </form>
    </div>
</div>
