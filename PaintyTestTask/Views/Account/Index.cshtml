@model AccountVM
@if (User.Identity.Name == Model.User.UserName)
{
    <a asp-action="Create" asp-route-userId="@Model.User.Id" class="btn btn-primary form-control">Create</a>
}
else if (Model.FollowButton)
{
    <a asp-action="ToggleFollow" asp-route-userId="@Model.User.Id" class="btn btn-primary form-control">Follow</a>
}
else if (!Model.FollowButton)
{
    <a asp-action="ToggleFollow" asp-route-userId="@Model.User.Id" class="btn btn-danger form-control">Unfollow</a>
}
@if (Model.AccessDenied)
{
    <span class="text-muted">You don't have access to this content</span>
}
@foreach (var publication in Model.Publications)
{
    <div class="col-lg-3 col-sm-6">
        <div class="row p-2">
            <div class="col-12 p-1">
                <div class="card border-0 p-3 shadow border-top border-5 rounded">
                    @*inline css!!!*@
                    <img src="@publication.ImgUrl" style="height: 400px; width: 274px;" class="card-img-top rounded"/>
                    <div class="card-body pb-0">
                        <div class="pl-1">
                            <p class="text-dark text-opacity-75 text-center mb-0">
                            </p>
                        </div>
                        <div class="pl-1">
                            <p class="text-dark text-opacity-75 text-center">
                                Posted
                                <span>
                                    @publication.PostedDate.ToShortDateString()
                                </span>
                            </p>
                        </div>
                        <div class="pl-1">
                            <a asp-action="Details" asp-route-publicationId="@publication.Id" class="btn btn-primary bg-gradient border-0 form-control">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}